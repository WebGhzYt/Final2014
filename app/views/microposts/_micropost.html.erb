<li id="micropost-<%= micropost.id %>">
  	<%= link_to gravatar_for(micropost.user), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <div id="blog-image"><%= image_tag micropost.picture.url,:size => "260x180" if micropost.picture? %></div>
  <span class="timestamp">
    Posted <%= time_ago_in_words(micropost.created_at) %> ago.
  </span>
  <%= link_to "delete", micropost, method:  :delete, data: {confirm: "R u sure bdy!"}%>
</li>